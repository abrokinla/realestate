{
    "version": 2,
    "builds": [
      {
        "src": "dist/**",
        "use": "@vercel/static"
      },
      {
        "src": "backend/flaskr/**",
        "use": "@vercel/python",
        "config": {
          "build": {
            "env": {
              "PIP_TARGET": "./python_packages",
              "PIP_EXTRA_INDEX_URL": "https://real-estate.vercel.app/python-packages/simple"
            },
            "command": "pip install -r requirements.txt -t ./python_packages"
          }
        }
      },
      {
        "src": "frontend/real-estate/dist/**",
        "use": "@vercel/static"
      }
    ],
    "routes": [
      { "src": "/(.*)", "dest": "/backend/flaskr/__init__.py/$1" },
      { "src": "/(.*)", "dest": "/frontend/real-estate/index.html" }
    ]
  }